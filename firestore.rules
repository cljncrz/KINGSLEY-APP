rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is the owner of the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user is admin (assuming admins have a role field)
    function isAdmin() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection
    match /users/{userId} {
      // Users can read/write their own data
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // Bookings collection: create by authenticated user (must set userId), read by owner or admin
    // IMPORTANT: updates/deletes of canonical booking fields (status, scheduledAt, price, etc.) are admin-only.
    match /bookings/{bookingId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && (isAdmin() || resource.data.userId == request.auth.uid);

      // Only admins may update/delete bookings to prevent clients from changing canonical state.
      allow update, delete: if request.auth != null && isAdmin();

      // Subcollection: rescheduleRequests - users create requests, admins handle them
      match /rescheduleRequests/{reqId} {
        // Read: owner or admin
        allow read: if request.auth != null && (
          isAdmin() ||
          get(/databases/$(database)/documents/bookings/$(bookingId)).data.userId == request.auth.uid
        );

        // Create: only booking owner may create a reschedule request and only when booking.status contains 'pend' (pending)
        allow create: if request.auth != null
            && request.auth.uid == request.resource.data.userId
            && get(/databases/$(database)/documents/bookings/$(bookingId)).data.userId == request.auth.uid
            && get(/databases/$(database)/documents/bookings/$(bookingId)).data.status.toString().toLowerCase().matches('.*pend.*')
            // Schema validation: ensure the request has the correct data
            && request.resource.data.bookingId == bookingId
            && request.resource.data.userId == request.auth.uid
            && request.resource.data.bookingOwnerId == get(/databases/$(database)/documents/bookings/$(bookingId)).data.userId
            && request.resource.data.status == 'pending'
            && request.resource.data.newDate is timestamp;

        // Update: only admins can approve/decline (set status to 'approved'|'declined'),
        // but the requester can cancel their own pending request by setting status to 'cancelled'.
        allow update: if request.auth != null && (
          isAdmin()
          || (
            // requester can cancel their own pending request
            request.auth.uid == resource.data.userId
            && resource.data.status == 'pending'
            && request.resource.data.status == 'cancelled'
          )
        );

        // Deleting requests allowed for admins only
        allow delete: if request.auth != null && isAdmin();
      }
    }

    // Notifications subcollection under users
    match /users/{userId}/notifications/{notificationId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // Allow admins to read/write everything
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
